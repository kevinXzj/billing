<!DOCTYPE html>
<html>
<head>
  <title>帐务管理系统 </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name -%> <%= action_name -%>" >
<%= nav_bar fox: :top, brand: "销售e加帐务系统" do %>
	<% if session[:user_login] %>
		<%= menu_group do %>
      <%= menu_item "首页", root_path %>
      <%= menu_item "套餐管理", companies_path %>
      <%= menu_item "号码管理", numbers_path %>
      <%= menu_item "客户管理", customers_path %>
      <%= menu_item "账单管理", bills_path %>
      <%= menu_item "基础数据管理", issue_number_import_logs_path %>
  	<% end %>
  	<%= menu_group pull: :right do %>
    	<%= menu_item "退出", login_out_path %>
		<% end -%>
	<% else %>
	<!--
		<%= form_tag sessions_path , class: "navbar-form pull-right" do -%>
			<p>
				<label for="login">帐号:</label>
				<%= text_field_tag :login,params[:login] %>
			</p>
			<p>
				<label for="password">密码:</label>
				<%= password_field_tag :password, params[:password] %><%= submit_tag "登录" %>
			</p>
		<% end %>
	-->
	<% end -%>
<% end -%>
<div class="container">
	<%= bootstrap_flash %>
	<%= yield %>
</div>
</body>
</html>
