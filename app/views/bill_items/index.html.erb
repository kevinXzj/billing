<p id="notice"><%= notice %></p>

<h1>Listing Bill Items</h1>

<table>
  <thead>
    <tr>
      <th>Voice</th>
      <th>Message</th>
      <th>Internet</th>
      <th>Service</th>
      <th>Proxy</th>
      <th>Bill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_items.each do |bill_item| %>
      <tr>
        <td><%= bill_item.voice %></td>
        <td><%= bill_item.message %></td>
        <td><%= bill_item.internet %></td>
        <td><%= bill_item.service %></td>
        <td><%= bill_item.proxy %></td>
        <td><%= bill_item.bill %></td>
        <td><%= link_to 'Show', bill_item %></td>
        <td><%= link_to 'Edit', edit_bill_item_path(bill_item) %></td>
        <td><%= link_to 'Destroy', bill_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

