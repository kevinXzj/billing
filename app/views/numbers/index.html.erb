<%- model_class = Number -%>
<h3><%=t '.title', :default => model_class.model_name.human %>列表</h3>
<%= grid(@numbers_grid) do |g|

  g.column name:"#{model_class.human_attribute_name :phone_num}", 
  attribute: 'phone_num' do |number|
    number.phone_num
  end

  g.column name:"#{model_class.human_attribute_name :real_num}", 
  attribute: 'real_num' do |number|
    number.real_num
  end

  g.column name:"#{model_class.human_attribute_name :apply_at}", 
  attribute: 'apply_at' do |number|
    number.apply_at
  end

  g.column name:"#{model_class.human_attribute_name :company_id}" do |number|
    number.company.name
  end

  g.column do |number|
    link_to('查看', number )
  end
  g.column do |number|
    link_to('修改', edit_number_path(number) )
  end
  g.column do |number|
    link_to('删除', number, method: :delete, data: { confirm: '确定删除' } )
  end
end -%>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_number_path,
            :class => 'btn btn-primary' %>
